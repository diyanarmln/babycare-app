<%- include('header-user', {title: `Baby Care`}); -%>

<div class="container">
  <div class="row" style="padding-top: 70px; padding-bottom: 30px">
    <div class="col d-flex justify-content-end">
      <button
        type="button"
        class="btn btn-default btn-circle btn-xl"
        data-toggle="modal"
        data-target="#soiledNappyModal"
      >
        <i class="fas fa-poo"></i>
      </button>
    </div>
    <div class="col d-flex justify-content-start">
      <button
        type="button"
        class="btn btn-default btn-circle btn-xl"
        data-toggle="modal"
        data-target="#wetNappyModal"
      >
        <img
          style="width: 60%"
          src="https://cdn-icons-png.flaticon.com/512/3260/3260055.png"
        />
      </button>
    </div>
  </div>
  <div class="row" style="padding-bottom: 40px">
    <div class="col d-flex justify-content-end">
      <button
        type="button"
        class="btn btn-default btn-circle btn-xl"
        data-toggle="modal"
        data-target="#milkModal"
      >
        <img
          style="width: 60%"
          src="https://cdn-icons-png.flaticon.com/512/4292/4292086.png"
        />
      </button>
    </div>
    <div class="col d-flex justify-content-start">
      <button
        type="button"
        class="btn btn-default btn-circle btn-xl"
        data-toggle="modal"
        data-target="#sleepModal"
      >
        <img
          style="width: 60%"
          src="https://cdn-icons-png.flaticon.com/512/865/865813.png"
        />
      </button>
    </div>
  </div>
</div>

<!-- profile photo -->
<div class="container" style="position: relative">
  <div class="row justify-content-center">
    <a
      class="
        profile-photo
        btn-circle btn-xl
        d-flex
        align-items-center
        justify-content-center
      "
      data-toggle="modal"
      data-target="#profilePhotoModal"
    >
      <img src="/<%= rows[0].filename %>" class="profile-photo-img" />
    </a>
  </div>
  <!-- profile name -->
  <div class="row justify-content-center">
    <button
      class="profile-name"
      data-toggle="modal"
      data-target="#editProfileNameModal"
      type="button"
    >
      Nayla Sofea
    </button>

    <a
      href="..."
      class="add-profile"
      data-toggle="modal"
      data-target="#addProfileModal"
    >
      +</a
    >
  </div>
</div>

<!-- log table -->
<div class="container" style="padding: 20px 10px">
  <table
    id="logTable"
    class="table log-table justify-content-center table-striped table-hover"
    style="font-size: 90%"
  >
    <thead class="thead-custom">
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Event</th>
        <th style="display: none">logId</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody id="logBody">
      <% rows.forEach((row)=>{ %>
      <tr
        class="rowEdit"
        data-toggle="modal"
        data-id="<%= row.log_id %>"
        data-target="#editModal<%= row.event_id %>"
      >
        <td class="date">
          <%= row.date.toLocaleString('en-US', { day:'numeric', month: 'short',
          hour: 'numeric', minute: 'numeric', hour12: true }) %>
        </td>
        <td><%= row.event_name %></td>
        <td style="display: none"><%= row.log_id %></td>
        <td class="col-delete">
          <!-- <button
            type="button"
            class="
              bbtn
              btn-sm btn-primary
              editingTRbutton
              fas
              fa-pencil-alt
              noUnderlineCustom
              text-white
            "
          ></button> -->
          <form
            action="..."
            onclick="return confirm('Are you sure you want to delete this event?')"
          >
            <i class="fas fa-minus-circle"></i>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<div><%- include('eventModal'); -%></div>
<div><%- include('profileModal'); -%></div>

<div><%- include('footer'); -%></div>
