<!-- Modal for soiled nappy event-->
<div
  class="modal fade"
  id="soiledNappyModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="soiledNappyModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Soiled Nappy</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- modal content -->
        <form>
          <div class="form-group">
            <label for="inputSoiledDate">Date</label>
            <input
              type="date"
              class="form-control"
              id="inputSoiledDate"
              placeholder="Enter date of soiled nappy"
            />
            <label for="inputSoiledTime">Time</label>
            <input
              type="time"
              class="form-control"
              id="inputSoiledTime"
              placeholder="Enter time of soiled nappy"
            />
            <label for="inputSoiledColour">Stool Colour</label>
            <select class="custom-select">
              <option selected>Select</option>
              <option value="1">Black</option>
              <option value="2">Brown/ Orange</option>
              <option value="3">Green</option>
              <option value="4">Red</option>
              <option value="5">White</option>
              <option value="6">Yellow</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>

