      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">1</th>
        <td>Mark</td>
        <td>Otto</td>
      </tr>
      <tr>
        <th scope="row">2</th>
        <td>Jacob</td>
        <td>Thornton</td>
      </tr>
      <tr>
        <th scope="row">3</th>
        <td>Larry</td>
        <td>the Bird</td>
      </tr>
    </tbody>
  </table>
</div>

<!-- Modal for wet nappy event-->
<div
  class="modal fade"
  id="wetNappyModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="wetNappyModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Wet Nappy</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- modal content -->
        <form>
          <div class="form-group">
            <label for="inputWetDate">Date</label>
            <input
              type="date"
              class="form-control"
              id="inputWetDate"
              placeholder="Enter date of wet nappy"
            />
            <label for="inputWetTime">Time</label>
            <input
              type="time"
              class="form-control"
              id="inputWetTime"
              placeholder="Enter time of wet nappy"
            />
            <label for="inputWetWeight">Weight</label>
            <select class="custom-select">
              <option selected>Select</option>
              <option value="1">Light</option>
              <option value="2">Moderate</option>
              <option value="3">Heavy</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>

