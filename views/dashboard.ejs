<%- include('header-user', {title: `Baby Care`}); -%>

<div class="container">
  <div class="row" style="padding-top: 70px; padding-bottom: 30px">
    <div class="col d-flex justify-content-end">
      <button
        type="button"
        class="btn btn-default btn-circle btn-xl"
        data-toggle="modal"
        data-target="#soiledNappyModal"
      >
        <i class="fas fa-poo"></i>
      </button>
    </div>
    <div class="col d-flex justify-content-start">
      <button
        type="button"
        class="btn btn-default btn-circle btn-xl"
        data-toggle="modal"
        data-target="#wetNappyModal"
      >
        <img
          style="width: 60%"
          src="https://cdn-icons-png.flaticon.com/512/3260/3260055.png"
        />
      </button>
    </div>
  </div>
  <div class="row" style="padding-bottom: 40px">
    <div class="col d-flex justify-content-end">
      <button
        type="button"
        class="btn btn-default btn-circle btn-xl"
        data-toggle="modal"
        data-target="#milkModal"
      >
        <img
          style="width: 60%"
          src="https://cdn-icons-png.flaticon.com/512/4292/4292086.png"
        />
      </button>
    </div>
    <div class="col d-flex justify-content-start">
      <button
        type="button"
        class="btn btn-default btn-circle btn-xl"
        data-toggle="modal"
        data-target="#sleepModal"
      >
        <img
          style="width: 60%"
          src="https://cdn-icons-png.flaticon.com/512/865/865813.png"
        />
      </button>
    </div>
  </div>
</div>

<!-- profile photo -->
<div class="container">
  <div class="row justify-content-center">
    <a
      class="
        profile-photo
        btn-circle btn-xl
        d-flex
        align-items-center
        justify-content-center
      "
      data-toggle="modal"
      data-target="#profilePhotoModal"
      style="
        position: relative;
        border-color: #1eaaf1;
        border-style: double;
        width: 130px;
        height: 130px;
      "
      href="..."
      role="button"
    >
      <img
        style="width: 80%"
        src="https://cdn-icons-png.flaticon.com/512/3282/3282468.png"
      />
    </a>
  </div>
  <!-- profile name -->
  <div class="row justify-content-center">
    <button
      class="profile-name"
      data-toggle="modal"
      data-target="#editProfileNameModal"
      type="button"
    >
      Nayla Sofea
    </button>
  </div>
</div>

<!-- log table -->
<div class="container" style="padding: 20px 10px">
  <table
    class="
      table
      justify-content-center
      table-striped table-hover table-bordered
    "
    style="font-size: 90%"
  >
    <thead class="thead-custom">
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Time</th>
        <th scope="col">Event</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">1</th>
        <td>Mark</td>
        <td>Otto</td>
      </tr>
      <tr>
        <th scope="row">2</th>
        <td>Jacob</td>
        <td>Thornton</td>
      </tr>
      <tr>
        <th scope="row">3</th>
        <td>Larry</td>
        <td>the Bird</td>
      </tr>
    </tbody>
  </table>
</div>

<div><%- include('eventModal'); -%></div>
<div><%- include('profileModal'); -%></div>

<div><%- include('footer'); -%></div>
